    <div class="modal_overlay">
        <div class="modal">
            <a class="icon_modal">
                <i class="material-icons" id="close">close</i>
                <i class="material-icons" id="open_in_full">open_in_full</i>
            </a>
            <div class="modal_content">
                <!-- video aqui -->
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>
    <div class="links" id="link-footer">
        <a href="https://www.facebook.com/rocketseat">Facebook</a>
        <a href="https://www.instagram.com/rocketseat_oficial/">Instagram</a>
        <a href="https://github.com/rocketseat">Github</a>


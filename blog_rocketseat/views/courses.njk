{% extends "layout.njk" %}
{% block title%}
    <title>Blog-Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>Conte√∫dos</h1>
    </div>
    <section class="cards link_none">
